<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edtUserFirstNameReg"
        android:ems="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_marginBottom="108dp"
        android:layout_above="@+id/edtUserEmailReg"
        android:layout_alignLeft="@+id/edtUserEmailReg"
        android:layout_alignStart="@+id/edtUserEmailReg" />

    <EditText
        android:id="@+id/edtUserLastNameReg"
        android:ems="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/edtUserEmailReg"
        android:layout_alignLeft="@+id/edtUserFirstNameReg"
        android:layout_alignStart="@+id/edtUserFirstNameReg" />

    <EditText
        android:id="@+id/edtUserEmailReg"
        android:ems="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/edtUserPassReg"
        android:ems="15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/edtUserEmailReg"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnRegisterAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtUserPassReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="SIGN UP" />

</RelativeLayout>